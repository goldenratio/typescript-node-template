{
	"name": "typescript-node-template",
	"version": "1.0.0",
	"description": "",
	"engines": {
		"node": ">=20.10.0",
		"npm": ">=10.2.3"
	},
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"dev": "npm run tsc && NODE_ENV=development node ./dist/index.js",
		"prod": "npm run check-code-style && npm run tsc && NODE_ENV=production node ./dist/index.js",
		"tsc": "tsc",
		"test": "node --import tsx --test ./src/**/*.test.ts",
		"fix-code-style": "biome check --write .src/*.*",
		"check-code-style": "biome check src/*.*"
	},
	"author": "",
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/node": "^20.12.7",
		"tsx": "^4.16.2",
		"typescript": "^5.5.3"
	},
	"dependencies": {
		"dotenv": "^16.4.5"
	}
}
